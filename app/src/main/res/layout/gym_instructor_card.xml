<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/gym_instructor_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="fitXY"
            android:contentDescription="@string/our_awesome_gym_instructor"/>

        <TextView
            android:id="@+id/gym_instructor_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gym_instructor_image"
            android:paddingLeft="@dimen/name_padding"
            android:paddingRight="@dimen/name_padding"
            android:paddingTop="@dimen/name_padding"/>

        <TextView
            android:id="@+id/gym_instructor_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gym_instructor_names"
            android:paddingLeft="@dimen/name_padding"
            android:paddingRight="@dimen/name_padding"
            android:paddingBottom="@dimen/minor_padding_bottom"/>

        <TextView
            android:id="@+id/gym_instructor_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gym_instructor_email"
            android:paddingLeft="@dimen/name_padding"
            android:paddingRight="@dimen/name_padding"
            android:paddingBottom="@dimen/minor_padding_bottom"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
