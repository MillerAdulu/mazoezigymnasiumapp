<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gym_instructor_names_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginVertical="@dimen/fab_margin"
        android:text="@string/names" />

    <TextView
        android:id="@+id/gym_instructor_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_toRightOf="@id/gym_instructor_names_label"
        android:text="@string/names" />

    <TextView
        android:id="@+id/gym_instructor_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_below="@id/gym_instructor_names_label"
        android:text="@string/email" />

    <TextView
        android:id="@+id/gym_instructor_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_toRightOf="@id/gym_instructor_email_label"
        android:layout_below="@id/gym_instructor_names"
        android:text="@string/email" />

    <TextView
        android:id="@+id/gym_instructor_gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_below="@id/gym_instructor_email_label"
        android:text="@string/gender" />

    <TextView
        android:id="@+id/gym_instructor_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/fab_margin"
        android:layout_toRightOf="@id/gym_instructor_gender_label"
        android:layout_below="@id/gym_instructor_email"
        android:text="@string/gender" />

</RelativeLayout>
